@using Application.Search.Query
@using Domain.SearchModels
<table id="accordionCustomerTable" style="width: 100%">
    <thead>
    <tr class="card">
        <th>Sök:<input id="search" class="form-control httpSearch" type="text" data-url="@Url.Action("GetCustomers", "Customers",new{})" data-replaceId="#customerTableBody"/></th>
    </tr>
    <tr class="card">
        <th>
            <div class="row">
                <div class="offset-1 col-sm-2">
                    <a class="nav-link httpSearch"
                       id="@nameof(CustomerSearch.Givenname)"
                       data-replaceId="#customerTableBody" 
                       data-orderBy="0" 
                       data-orderByIncrease
                       data-orderByField="@nameof(CustomerSearch.Givenname)"
                       asp-controller="Customers" 
                       asp-action="GetCustomers">
                        Given name
                    </a>
                </div>
                <div class="col-sm-1">
                    <a class="nav-link httpSearch" 
                       id="@nameof(CustomerSearch.Surname)"
                       data-replaceId="#customerTableBody" 
                       data-orderBy="0" 
                       data-orderByIncrease
                       data-orderByField="@nameof(CustomerSearch.Surname)"
                       asp-controller="Customers" asp-action="GetCustomers">
                        Surname
                    </a>
                </div>
                <div class="col-sm-1">
                    <a class="nav-link httpSearch" 
                       id="@nameof(CustomerSearch.City)"
                       data-replaceId="#customerTableBody" 
                       data-orderBy="0" 
                       data-orderByIncrease
                       data-orderByField="@nameof(CustomerSearch.City)"
                       asp-controller="Customers" 
                       asp-action="GetCustomers">
                        City
                    </a>
                </div>
            </div>
        </th>
    </tr>
    </thead>
    <tbody id="customerTableBody">
    @await Component.InvokeAsync("CustomerTableBody", new {query = new SearchQuery {Search = new SearchData {CurrentPage = 1}}}).ConfigureAwait(false)
    </tbody>
    <tfoot>

    </tfoot>
</table>
