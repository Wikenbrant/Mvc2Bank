@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
            <div class="card-body">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1" asp-for="Input.FirstName"></label>
                                <input class="form-control py-4" asp-for="Input.FirstName" type="text" placeholder="Enter first name"/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1" asp-for="Input.LastName"></label>
                                <input class="form-control py-4" asp-for="Input.LastName" type="text" placeholder="Enter last name"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="small mb-1" asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control py-4" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1" asp-for="Input.Password"></label>
                                <input class="form-control py-4" asp-for="Input.Password" type="password" placeholder="Enter password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1" asp-for="Input.ConfirmPassword"></label>
                                <input class="form-control py-4" asp-for="Input.ConfirmPassword" type="password" placeholder="Enter password" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-4 mb-0">
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </div>
            
                </form>
            </div>
            <div class="card-footer text-center">
                <div class="small">
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Have an account? Go to login</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
